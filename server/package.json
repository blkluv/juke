{
  "name": "server",
  "version": "0.1.0",
  "description": "Backend server for the application",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:worker": "node dist/src/youtube-worker.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/youtube-worker.ts",
    "migrate": "knex migrate:latest",
    "reset-db": "rm -f dev.sqlite3 && knex migrate:latest && echo 'Database reset and migrations applied.'",
    "rollback": "knex migrate:rollback",
    "generate:sdk": "openapi-typescript http://localhost:3001/openapi.json --output ../frontend/src/sdk/api.ts",
    "test": "mocha --require ts-node/register tests/api/**/*.test.ts --exit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.839.0",
    "@aws-sdk/lib-storage": "^3.839.0",
    "@aws-sdk/s3-request-presigner": "^3.839.0",
    "@distube/ytdl-core": "^4.16.12",
    "better-sqlite3": "^12.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "https-proxy-agent": "^7.0.6",
    "knex": "^3.1.0",
    "kysely": "^0.28.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.4",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "youtube-dl-exec": "^3.0.22"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "@types/chai": "*",
    "@types/cors": "^2.8.12",
    "@types/express": "^5.0.3",
    "@types/mocha": "*",
    "@types/node": "^24.0.4",
    "@types/node-fetch": "^3.0.2",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "*",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chai": "^5.2.0",
    "mocha": "^11.7.1",
    "openapi-typescript": "*",
    "supertest": "*",
    "ts-node": "*",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
